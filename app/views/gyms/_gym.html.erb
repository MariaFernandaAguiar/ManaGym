<div id="<%= dom_id gym %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Nome gym:</strong>
    <%= gym.nome_gym %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Cnpj gym:</strong>
    <%= gym.cnpj_gym %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quan student:</strong>
    <%= gym.quan_student %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Endereco gym:</strong>
    <%= gym.endereco_gym %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this gym", gym, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this gym', edit_gym_path(gym), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
