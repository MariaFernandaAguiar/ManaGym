<div id="<%= dom_id student %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Nome student:</strong>
    <%= student.nome_student %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Rg student:</strong>
    <%= student.rg_student %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Email student:</strong>
    <%= student.email_student %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Data matricula:</strong>
    <%= student.data_matricula %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Gym:</strong>
    <%= student.gym_id_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this student", student, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this student', edit_student_path(student), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
