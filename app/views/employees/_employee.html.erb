<div id="<%= dom_id employee %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Nome employee:</strong>
    <%= employee.nome_employee %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Rg employee:</strong>
    <%= employee.rg_employee %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Email employee:</strong>
    <%= employee.email_employee %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Data inicio:</strong>
    <%= employee.data_inicio %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Salario employee:</strong>
    <%= employee.salario_employee %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Gym employee:</strong>
    <%= employee.gym_id %>
  </p>

  
  
  <% if action_name != "show" %>
    <%= link_to "Show this employee", employee, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this employee', edit_employee_path(employee), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
