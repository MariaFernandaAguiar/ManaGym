<div id="<%= dom_id machine %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Quan machine:</strong>
    <%= machine.quan_machine %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Type machine:</strong>
    <%= machine.type_machine %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Nome machine:</strong>
    <%= machine.nome_machine %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this machine", machine, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this machine', edit_machine_path(machine), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
